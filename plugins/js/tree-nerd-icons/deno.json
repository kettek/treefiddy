{
	"tasks": {
		"collect": "deno run --allow-net --allow-write ./get_mappings.ts",
		"build": {
			"command": "deno bundle --minify --outdir dist ./index.ts",
			"dependencies": ["collect"]
		},
		"clean-install": {
			"command": "rm -rf $(deno run --allow-env --allow-sys ../get_install_dir.ts)"
		},
		"install": {
			"command": "mkdir -p $(deno run --allow-env --allow-sys ../get_install_dir.ts) && cp -r dist/* $(deno run --allow-env --allow-sys ../get_install_dir.ts)",
			"dependencies": ["build", "clean-install"]
		}
	}
}
